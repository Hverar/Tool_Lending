<%= simple_form_for([@tool, @booking], html: { class: "booking-form" }) do |f| %>
  <%= f.input :start_date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>

  <%= f.input :end_date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>

  <%= f.submit "Book", class: "btn btn-warning rounded-pill px-4" %>
<% end %>
