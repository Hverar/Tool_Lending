<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1><%= @tool.persisted? ? "Edit Tool" : "List a Tool" %></h1>

        <%= simple_form_for(@tool, html: { multipart: true }) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :condition, collection: ['New', 'Used - Like New', 'Used - Good', 'Used - Fair'], prompt: 'Select condition' %>
          <%= f.input :tool_price, label: "Price ($)" %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
