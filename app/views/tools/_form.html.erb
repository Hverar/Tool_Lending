<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="card-body rounded p-3 shadow">

        <h1>List a Tool</h1>
        <%= simple_form_for(@tool) do |f| %>
          <%= f.input :name, input_html: { class: "custom-input-form" } %>
          <%= f.input :description, input_html: { class: "custom-input-form" } %>
          <%= f.input :condition,
                      collection: ['New', 'Used - Like New', 'Used - Good', 'Used - Fair'],
                      prompt: 'Select condition',
                      input_html: { class: "custom-input-form" } %>
          <%= f.input :tool_price, label: "Price ($)", input_html: { class: "custom-input-form" } %>
          <%= f.input :photo, as: :file, label: "Photo", input_html: { class: "custom-input-form" } %>
          <%= f.submit class: 'btn btn-flat rounded-pill px-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
