<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h1>List a Tool</h1>
          <%= simple_form_for(@tool) do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :condition, collection: ['New', 'Used - Like New', 'Used - Good', 'Used - Fair'], prompt: 'Select condition' %>
            <%= f.input :tool_price, label: "Price ($)" %>
            <%= f.input :photo, label: "Photo", as: :file %>
            <%= f.submit class: 'btn btn-flat' %>
          <% end %>

      </div>
    </div>
  </div>
</div>
