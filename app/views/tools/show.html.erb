<div class="container py-5">
  <div class="row">
    <div class="col-8">
      <div class="bg-white rounded p-4 shadow">
        <div class="card-tool-show">
          <% if @tool.photo.attached? %>
            <%= cl_image_tag @tool.photo.key, height: 300, crop: :fit, class: "img-fluid mb-4" %>
          <% end %>

          <div class="card-tool-infos">
            <div class="card-tool-title d-flex justify-content-between">
              <div>
                <h2><%= @tool.name %></h2>
              </div>
              <div>
                <h2>$<%= number_with_precision(@tool.tool_price, precision: 2) %>/day</h2>
              </div>
            </div>

            <p class="card-tool-condition">Condition: <%= @tool.condition %></p>
            <p class="card-tool-description"><%= @tool.description %></p>
          </div>

          <div class="card-tool-renting mt-4">
            <% if @booking.errors.any? %>
              <div class="alert alert-danger">
                <h5>Booking Error</h5>
                <ul>
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <% existing_booking = current_user.bookings.find_by(tool_id: @tool.id) %>

            <% if existing_booking.present? %>
              <div class="alert alert-info mt-3">
                You've already made a booking for this tool.
              </div>

              <%= button_to "Cancel Booking", booking_path(existing_booking),
                    method: :delete,
                    data: { confirm: "Are you sure you want to cancel your booking?" },
                    class: "btn btn-danger mt-2" %>
            <% else %>
              <%= render 'bookings/form', tool: @tool, booking: @booking %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="bg-white rounded p-3 shadow text-center d-flex flex-column gap-3">
        <%= link_to "Back to all tools", tools_path, class: "btn btn-primary" %>
        <%= link_to "Edit Tool", edit_tool_path(@tool), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
