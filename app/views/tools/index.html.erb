<h1>hello this is your tool</h1>

<%= link_to new_tool_path do %>
  <i class="fa-solid fa-screwdriver-wrench"></i> Add a tool
<% end %>

<div class="container mt-5">
  <h1 class="text-center fw-bold mb-5 border-bottom pb-3" style="font-size: 2rem;">
    Available Tools
  </h1>

  <% if @tools.any? %>
    <div class="row">
      <% @tools.each do |tool| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm">

            <!-- Conditional Image Display -->
            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
              <% case tool.name %>
              <% when "Hammer" %>
                <%= image_tag "hammer.webp", alt: "Hammer", class: "img-fluid p-2", style: "max-height: 100%; max-width: 100%;" %>
              <% when "Hand Saw" %>
                <%= image_tag "handsaw.png", alt: "Hand Saw", class: "img-fluid p-2", style: "max-height: 100%; max-width: 100%;" %>
              <% when "Cordless Drill" %>
                <%= image_tag "drill.avif", alt: "Cordless Drill", class: "img-fluid p-2", style: "max-height: 100%; max-width: 100%;" %>
              <% when "Paint Roller" %>
                <%= image_tag "paint roller.avif", alt: "Paint Roller", class: "img-fluid p-2", style: "max-height: 100%; max-width: 100%;" %>
              <% when "Toolbox" %>
                <%= image_tag "toolbox.avif", alt: "Toolbox", class: "img-fluid p-2", style: "max-height: 100%; max-width: 100%;" %>
              <% else %>
                <span class="text-muted">[ Image Placeholder ]</span>
              <% end %>
            </div>

            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title mb-1"><%= tool.name %></h5>
                <p class="card-text text-muted mb-2"><%= truncate(tool.description, length: 80) %></p>

                <% if tool.tool_price.present? %>
                  <p class="text-success fw-bold mb-1">$<%= number_with_precision(tool.tool_price, precision: 2) %></p>
                <% end %>
              </div>

              <%= link_to "View", tool_path(tool), class: "btn btn-primary btn-sm mt-3 w-100" %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No tools available yet. Check back soon!</p>
  <% end %>
</div>
