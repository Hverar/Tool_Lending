<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-4">Tool Lending</h1>
    <%= link_to "My Tools", user_tools_path, class: "btn btn-outline-secondary" %>
  </div>

  <% if params[:condition].present? || params[:min_price].present? || params[:max_price].present? %>
    <div class="alert alert-info text-center">
      <p class="mb-2"><strong>Filtered by:</strong></p>
      <ul class="list-inline mb-0">
        <% if params[:condition].present? %>
          <li class="list-inline-item">Condition: <%= params[:condition].capitalize %></li>
        <% end %>
        <% if params[:min_price].present? %>
          <li class="list-inline-item">Min Price: $<%= params[:min_price] %></li>
        <% end %>
        <% if params[:max_price].present? %>
          <li class="list-inline-item">Max Price: $<%= params[:max_price] %></li>
        <% end %>
      </ul>
      <%= link_to "Clear Filters", tools_path, class: "btn btn-sm btn-outline-secondary mt-2" %>
    </div>
  <% end %>

  <% if @tools.any? %>
    <div class="row">
      <% @tools.each do |tool| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100 shadow-sm">

            <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
              <% if tool.photo.attached? %>
                <%= cl_image_tag tool.photo.key, height: 150, crop: :fit, class: "img-fluid p-2" %>
              <% else %>
                <%= image_tag("tool-default.png") %>
              <% end %>
            </div>

            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title mb-1"><%= tool.name %></h5>
                <p class="card-text text-muted mb-2"><%= truncate(tool.description, length: 80) %></p>

                <% if tool.tool_price.present? %>
                  <p class="text-success fw-bold mb-1">$<%= number_with_precision(tool.tool_price, precision: 2) %></p>
                <% end %>
              </div>

              <%= link_to "View", tool_path(tool), class: "btn btn-primary btn-sm mt-3 w-100" %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center mt-5">No tools available yet. Try adjusting your filters.</p>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to new_tool_path, class: "btn btn-outline-primary" do %>
      <i class="fa-solid fa-screwdriver-wrench"></i> Add a tool
    <% end %>
  </div>
</div>
